<div class="container">
  <div class="content">
    <div class="content_left mr-3">
      <div class="title_box">
        <h2><%= @flat.name %></h2>
        <p class="mb-0"><%= @flat.address %></p>
      </div>

      <div class="title_box des_box">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>

    <div class="content_right">
      <div class="title_box">
        <h5>Book this place!</h5>
        <form action="#">
          <div class="form-group">
            <div class="input-group-prepend">
              <div class="input-group-text">From:</div>
              <input type="from" class="form-control" id="from" placeholder="12/10/2017">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group-prepend">
              <div class="input-group-text">To:</div>
              <input type="to" class="form-control" id="to" placeholder="18/10/2017">
            </div>
          </div>
          <button type="submit" class="btn btn-success form-control">Book</button>
        </form>
      </div>
      <div class="title_box">
        <h3>Details</h3>
        <div class="icon_text">
          <i class="fas fa-user-friends"></i>
          <p class="mr-3"><%= @flat.number_of_guests %></p>
          <i class="fas fa-euro-sign"></i>
          <p class="mr-3"><%= @flat.price_per_night %></p>
        </div>
      </div>

      <div class="title_box share_box">
        <p>Share</p>
        <div class="icon_text">
          <i class="fab fa-facebook-square mr-2"></i>
          <i class="fab fa-twitter-square mr-2"></i>
          <i class="fab fa-pinterest-square mr-2"></i>
          <i class="fa fa-envelope-square mr-2"></i>
        </div>
      </div>
    </div>
  </div>

  <%= link_to "Back to All Flats", flats_path, class: "btn btn-success mt-5" %>
</div>


