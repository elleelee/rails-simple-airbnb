<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <% if params[:action] == "edit" %>
    <%= f.submit "Edit the flat", class: "btn btn-primary" %>
  <% elsif params[:action] == "new" %>
    <%= f.submit "Add a flat", class: "btn btn-primary" %>
  <% end %>
<% end %>
