<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :photo_url %>
  <%= f.input :description %>
  <%= f.input :price_per_night, input_html: { min: '0', step: 'any' } %>
  <%= f.input :number_of_guests, collection: (1..4)%>
  <% if params[:action] == "edit" %>
    <%= f.submit "Edit flat", class: "btn btn-primary" %>
  <% elsif params[:action] == "new" %>
    <%= f.submit "Add flat", class: "btn btn-primary" %>
  <% end %>
<% end %>
